{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "baseUrl": "./",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types/",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true,
    "importsNotUsedAsValues": "preserve"
  },
  "exclude": [
    "**/__tests__/**/*",
    "coverage",
    ".logs",
    "node_modules",
    "dist",
    "docs"
  ],
  "include": [
    ".vuepress",
    "components",
    "utils"
  ]
}